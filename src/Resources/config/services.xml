<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="Burst\BurstPayment\Resources\snippet\de_DE\SnippetFile_de_DE" public="true">
            <tag name="shopware.snippet.file"/>
        </service>
        <service id="Burst\BurstPayment\Resources\snippet\en_GB\SnippetFile_en_GB" public="true">
            <tag name="shopware.snippet.file"/>
        </service>

        <service id="Burst\BurstPayment\Util\Logger" class="Monolog\Logger">
            <factory service="Shopware\Core\Framework\Log\LoggerFactory" method="createRotating"/>
            <argument type="string">burst_payment</argument>
        </service>

        <service id="Burst\BurstPayment\BurstRate\BurstRateEntityDefinition">
            <tag name="shopware.entity.definition" entity="burst_rate" />
        </service>
        <service id="Burst\BurstPayment\BurstRate\BurstRateService">
            <argument type="service" id="burst_rate.repository"/>
            <argument type="service" id="Burst\BurstPayment\Services\CoinGeckoApiService"/>
        </service>

        <service id="Burst\BurstPayment\Checkout\BurstPaymentHandler">
            <argument type="service" id="Burst\BurstPayment\Services\PaymentContext"/>
            <argument type="service" id="Burst\BurstPayment\BurstRate\BurstRateService"/>
            <tag name="shopware.payment.method.sync" />
        </service>

        <service id="Burst\BurstPayment\Checkout\CheckoutSubscriber">
            <argument type="service" id="Burst\BurstPayment\Services\SettingsService"/>
            <argument type="service" id="Burst\BurstPayment\BurstRate\BurstRateService"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="Burst\BurstPayment\Services\SettingsService">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
        </service>
        <service id="Burst\BurstPayment\Services\BurstApiFactory">
            <argument type="service" id="Burst\BurstPayment\Services\SettingsService"/>
            <argument type="service" id="Burst\BurstPayment\Util\Logger"/>
        </service>
        <service id="Burst\BurstPayment\Services\CoinGeckoApiService">
            <argument type="service" id="Burst\BurstPayment\Util\Logger"/>
        </service>
        <service id="Burst\BurstPayment\Services\PaymentContext">
            <argument type="service" id="order_transaction.repository"/>
        </service>
        <service id="Burst\BurstPayment\Services\OpenOrdersService">
            <argument type="service" id="Burst\BurstPayment\Util\Logger"/>
            <argument type="service" id="order_transaction.repository"/>
            <argument type="service" id="Burst\BurstPayment\Services\PaymentContext"/>
            <argument type="service" id="Burst\BurstPayment\Services\BurstApiFactory"/>
            <argument type="service" id="Burst\BurstPayment\Services\SettingsService"/>
            <argument type="service" id="Shopware\Core\Checkout\Order\Aggregate\OrderTransaction\OrderTransactionStateHandler"/>
        </service>

        <service id="Burst\BurstPayment\ScheduledTasks\UpdateRatesTask">
            <tag name="shopware.scheduled.task" />
        </service>
        <service id="Burst\BurstPayment\ScheduledTasks\UpdateRatesTaskHandler">
            <argument type="service" id="scheduled_task.repository" />
            <argument type="service" id="Burst\BurstPayment\BurstRate\BurstRateService" />
            <argument type="service" id="Burst\BurstPayment\Util\Logger"/>
            <tag name="messenger.message_handler" />
        </service>
        <service id="Burst\BurstPayment\ScheduledTasks\MatchUnmatchedOrdersTask">
            <tag name="shopware.scheduled.task" />
        </service>
        <service id="Burst\BurstPayment\ScheduledTasks\MatchUnmatchedOrdersTaskHandler">
            <argument type="service" id="scheduled_task.repository" />
            <argument type="service" id="Burst\BurstPayment\Services\OpenOrdersService" />
            <argument type="service" id="Burst\BurstPayment\Util\Logger"/>
            <tag name="messenger.message_handler" />
        </service>
        <service id="Burst\BurstPayment\ScheduledTasks\UpdateMatchedOrdersTask">
            <tag name="shopware.scheduled.task" />
        </service>
        <service id="Burst\BurstPayment\ScheduledTasks\UpdateMatchedOrdersTaskHandler">
            <argument type="service" id="scheduled_task.repository" />
            <argument type="service" id="Burst\BurstPayment\Services\OpenOrdersService" />
            <argument type="service" id="Burst\BurstPayment\Util\Logger"/>
            <tag name="messenger.message_handler" />
        </service>
    </services>
</container>
